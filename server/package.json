{
  "name": "taskify-server",
  "version": "1.0.0",
  "description": "Backend API server for Taskify todo application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:prod": "npm run security:check && node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "security:check": "node scripts/security-check.js",
    "security:check:dev": "node scripts/security-check.js --dev",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "predeploy": "npm run security:audit && npm run security:check"
  },
  "keywords": [
    "todo",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
